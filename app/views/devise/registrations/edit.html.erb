<div class="min-h-screen w-full flex items-center justify-center bg-purple-100 p-6">
  <div class="flex w-full max-w-4xl bg-white rounded-3xl shadow-lg overflow-hidden">

    <!-- Left side (Form) -->
    <div class="w-full p-8 md:w-1/2">
      <h2 class="text-3xl font-semibold text-purple-700 mb-2">Edit <%= resource_name.to_s.humanize %></h2>
      <p class="text-gray-500 mb-6">Update your account details below</p>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mb-4">
          <%= f.label :email, class: "block text-gray-700 mb-1" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-400" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="mb-4 text-sm text-gray-600">
            Currently waiting confirmation for: <%= resource.unconfirmed_email %>
          </div>
        <% end %>

        <div class="mb-4">
          <%= f.label :password, class: "block text-gray-700 mb-1" %>
          <i class="text-sm text-gray-500">(leave blank if you don't want to change it)</i>
          <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-400" %>
          <% if @minimum_password_length %>
            <p class="text-sm text-gray-500 mt-1"><%= @minimum_password_length %> characters minimum</p>
          <% end %>
        </div>

        <div class="mb-4">
          <%= f.label :password_confirmation, class: "block text-gray-700 mb-1" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-400" %>
        </div>

        <div class="mb-4">
          <%= f.label :current_password, class: "block text-gray-700 mb-1" %>
          <i class="text-sm text-gray-500">(we need your current password to confirm your changes)</i>
          <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-400" %>
        </div>

        <div class="mb-6">
          <%= f.submit "Update", class: "w-full bg-purple-500 hover:bg-purple-600 text-white font-semibold py-2 rounded-lg transition" %>
        </div>
      <% end %>

      <h3 class="text-lg font-semibold text-gray-700 mb-2">Cancel my account</h3>
      <div class="mb-6 text-sm text-gray-600">
        Unhappy?
        <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "text-purple-500 hover:underline" %>
      </div>

      <div class="text-center">
        <%= link_to "Back", :back, class: "text-purple-500 hover:underline" %>
      </div>
    </div>

    <!-- Right side (Image) -->
    <div class="hidden md:block md:w-1/2">
      <%= image_tag 'bg-image.png', id: 'logo-top', class: 'h-full' %>
    </div>

  </div>
</div>