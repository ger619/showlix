<div class="p-4 ml-64 w-full h-screen">
  <div class="p-4 border-2 border-dashed border-black rounded-lg dark:border-gray-700 h-full">
    <!-- Summary Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
      <!-- Total Deposits Card -->
      <div class="bg-green-100 p-6 rounded-lg shadow-md">
        <h3 class="text-lg font-semibold text-green-800">Total Deposits</h3>
        <p class="text-2xl font-bold text-green-600">
          <%= number_to_currency(@total_deposits_sum) %>
        </p>
      </div>
      <!-- Spendings Card -->
      <!-- Total Deposits Card -->
      <div class="bg-blue-100 p-6 rounded-lg shadow-md">
        <h3 class="text-lg font-semibold text-blue-800">Total Credits</h3>
        <p class="text-2xl font-bold text-blue-600">
          <%= number_to_currency(@total_credits_sum) %>
        </p>
      </div>
      <!-- Savings Card -->
      <div class="bg-yellow-100 p-6 rounded-lg shadow-md">
        <h3 class="text-lg font-semibold text-yellow-800">Total Returns</h3>
        <p class="text-2xl font-bold text-yellow-600">
          <%= number_to_currency(@total_returns_sum) %>
        </p>
      </div>
    </div>

    <!-- Placeholder Section -->
    <div class="flex items-center justify-center h-48 mb-4 bg-gray-50 dark:bg-gray-800 border border-dashed border-black rounded-lg">
      <svg class="w-8 h-8 text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 18 18">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 1v16M1 9h16" />
      </svg>
    </div>

    <!-- Table Section -->
    <div class="p-4 bg-gray-50 dark:bg-gray-800 border border-dashed border-black rounded-lg">
      <%= render 'home/table_show' %>
    </div>
  </div>
</div>