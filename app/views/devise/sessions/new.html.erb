<div class="min-h-screen w-full flex items-center justify-center bg-purple-100 p-6">
  <div class="flex w-full max-w-4xl bg-white rounded-3xl shadow-lg overflow-hidden">

    <!-- Left side (Form) -->
    <div class="w-full p-8 md:w-1/2">
      <h2 class="text-3xl font-semibold text-purple-700 mb-2">Log In</h2>
      <p class="text-gray-500 mb-6">Welcome back! Please enter your details</p>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mb-4">
          <%= f.label :email, class: "block text-gray-700 mb-1" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-400" %>
        </div>

        <div class="mb-4">
          <%= f.label :password, class: "block text-gray-700 mb-1" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-400" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center mb-4">
            <%= f.check_box :remember_me, class: "mr-2" %>
            <%= f.label :remember_me, class: "text-sm text-gray-600" %>
          </div>
        <% end %>

        <div class="text-right mb-6">
          <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-purple-500 text-sm hover:underline" %>
        </div>

        <div class="mb-6">
          <%= f.submit "Log in", class: "w-full bg-purple-500 hover:bg-purple-600 text-white font-semibold py-2 rounded-lg transition" %>
        </div>
      <% end %>


      <div class="text-center text-gray-600 text-sm">
        Don't have an account?
        <%= link_to "Sign up", new_registration_path(resource_name), class: "text-purple-500 hover:underline" %>
      </div>
    </div>

    <!-- Right side (Image) -->
    <div class="hidden md:block md:w-1/2">
      <%= image_tag 'bg-image.png', id: 'logo-top', class: 'h-full' %>

    </div>

  </div>
</div>
