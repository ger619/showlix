<div class="min-h-screen w-full flex items-center justify-center bg-purple-100 p-6">
  <div class="flex w-full max-w-4xl bg-white rounded-3xl shadow-lg overflow-hidden">

    <!-- Left side (Form) -->
    <div class="w-full p-8 md:w-1/2">
      <h2 class="text-3xl font-semibold text-purple-700 mb-2">Sign Up</h2>
      <p class="text-gray-500 mb-6">Create your account to get started</p>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mb-4">
          <%= f.label :email, class: "block text-gray-700 mb-1" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-400" %>
        </div>

        <div class="mb-4">
          <%= f.label :password, class: "block text-gray-700 mb-1" %>
          <% if @minimum_password_length %>
            <em class="text-sm text-gray-400">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "w-full mt-2 px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-400" %>
        </div>

        <div class="mb-6">
          <%= f.label :password_confirmation, class: "block text-gray-700 mb-1" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-400" %>
        </div>

        <div class="mb-6">
          <%= f.submit "Sign up", class: "w-full bg-purple-500 hover:bg-purple-600 text-white font-semibold py-2 rounded-lg transition" %>
        </div>
      <% end %>

      <div class="flex items-center justify-between mb-6">
        <hr class="w-1/4 border-gray-300">
        <span class="text-gray-400 text-sm">Or Sign Up With</span>
        <hr class="w-1/4 border-gray-300">
      </div>

      <div class="text-center text-gray-600 text-sm">
        Already have an account?
        <%= link_to "Log in", new_session_path(resource_name), class: "text-purple-500 hover:underline" %>
      </div>

      <%= render "devise/shared/links" %>

    </div>

    <!-- Right side (Image) -->
    <div class="hidden md:block md:w-1/2 content-center">
      <%= image_tag 'bg-image.png', id: 'logo-top', class: 'w-full' %>

    </div>

  </div>
</div>
